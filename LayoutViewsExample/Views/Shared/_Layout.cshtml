@*布局视图推荐名称上加_*@
@*先执行RenderBody，再执行布局视图*@

@{
    Layout = "_MasterLayout";
}


<!DOCTYPE html>
<html>
<head>
    <title>
        @ViewData["Title"]
    </title>
    <link href="~/StyleSheet.css" rel="stylesheet"/>
</head>
<body>

<div class="container">
    <div class="navbar">
        <div class="navbar-brand">
            AspNet Core App
        </div>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about-company">About</a></li>
            <li><a href="/contact-support">Contact</a></li>
            <li><a href="/products">All Products</a></li>
            <li><a href="/search-products">Search Products</a></li>
            <li><a href="/order-products">Order Product</a></li>
        </ul>
    </div>
</div> 

<div class="page-content">
    @RenderBody()
</div>

<div class="footer-content">
    @await RenderSectionAsync("footer_section", required: false)
</div>

</body>
</html>